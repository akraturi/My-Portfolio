<% include ../partials/header.ejs %>
<div class="container col-lg-6">

<%var title =""%>
<%var description ="";%>
<%var id="";%>
  <% if (typeof training != 'undefined' && edit) { %>
  <% title  = training.title; %>
  <% description = training.description;%>
  <% id = training._id; %>
<%}%>


<form class="" action="/trainings" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input type="text" name="training[title]" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%= title %>" placeholder="title">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Description</label>
    <textarea name="training[description]" id="exampleInputPassword1" placeholder="description" rows="8" cols="80"><%= description %></textarea>
  </div>
    <input type="hidden" name="edit_id"  value="<%= id %>">
  <button type="submit" class="btn btn-primary">Save</button>
</form>

</div>
<% include ../partials/footer.ejs %>
